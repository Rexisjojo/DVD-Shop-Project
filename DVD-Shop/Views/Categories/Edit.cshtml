@model DVD_Shop.Models.Category

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-white">Edit</h1>
<br />
<h4 class="text-white">Category</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-white"></div>
            <input type="hidden" asp-for="CategoryId" />
            <div class="form-group">
                <label asp-for="CName" class="control-label text-white"></label>
                <input asp-for="CName" class="form-control" />
                <span asp-validation-for="CName" class="text-white"></span>
            </div>
            <div class="form-group">
                <label asp-for="Slug" class="control-label text-white"></label>
                <input asp-for="Slug" class="form-control" />
                <span asp-validation-for="Slug" class="text-white"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label text-white">
                    <input class="form-check-input" asp-for="Cstatus" /> @Html.DisplayNameFor(model => model.Cstatus)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
