@model DVD_Shop.Models.Artist

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-white">Edit</h1>

@*<h4 class="text-white">Artist</h4>*@
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ArtistId" />
            <div class="form-group text-white">
                <label asp-for="aName" class="control-label">Artist</label>
                <input asp-for="aName" class="form-control" />
                <span asp-validation-for="aName" class="text-danger"></span>
            </div>
            <div class="form-group text-white">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group text-white">
                <label asp-for="AlbumId" class="control-label">Album</label>
                <select asp-for="AlbumId" class="form-control" asp-items="ViewBag.AlbumId"></select>
                <span asp-validation-for="AlbumId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
